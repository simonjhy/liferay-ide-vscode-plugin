{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"lib": [
			"ES2020"
		],
		"sourceMap": true,
		"sourceRoot": "src",
		"rootDir": "src",
		"strict": true,   /* enable all strict type-checking options */
		/*Additional Checks
		"noImplicitReturns": true, 
		"noFallthroughCasesInSwitch": true, 
		"noUnusedParameters": true,  
		"allowUnreachableCode": true,
		"allowUnusedLabels": true,
		"noImplicitAny": true  */
	}
}
